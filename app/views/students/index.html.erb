<% if @students.present? %>
<div id="right-column">
    <h2><span class="icon-studenT"></span>Students</h2>
    <div class="box-table">
      <table class="table">
        <thead>
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>User Name</th>
            <th>Status</th>
            <th>Role</th>
            <th>Class Name</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% for school in @students %>
      <tr style="text-align: center;">
        <td><%= school.first_name %></td>
        <td><%= school.last_name %></td>
        <% if school.reset_password_token == nil %>
          <td>
            <%= link_to school.email, school_student_path(@school, school) %>
          </td>
        <% else %>
          <td><%= school.email %></td>
        <% end %>
        <% if school.username.present? %>
          <td><%= school.username.split("@").last %></td>
        <% else %>
          <td></td>
        <% end %>
        <td>
          <% if school.reset_password_token == nil %>
            Joined
          <% else %>
            Invitation Sent
          <% end %>
        </td>
        <td><%= school.role %></td>
        <td><%= link_to school.studentclasses.first ? school.studentclasses.first.cls.class_name : "Nil", display_class_school_student_path(@school,school,:class_id =>school.studentclasses.first ? school.studentclasses.first.cls.id : '')%></td>
        <td>
          <% if school.reset_password_token == nil %>
            <%= link_to "<i class='fa fa-envelope-o'></i>".html_safe, posts_school_student_path(@school, school)%> 
          <% end %>
          <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, student_path(school), :remote => true, :method => :delete,:confirm => "Are You Sure?" %> 
        </td>
      </tr>
    <% end %>
</table>
    
<% else %>
  <span style="color: red;font-size: 15px;left: 166px;position: relative;top: 17px;">No Users.</span>
<% end %>
