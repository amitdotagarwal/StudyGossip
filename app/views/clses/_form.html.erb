<div class="col-md-20 col-md-offset-0">
  <div class="panel panel-default">
    <div class="panel-heading">    

<link rel="stylesheet" href="/assets/home/bootstrap.min.css">

<div class="controls" style="margin-left: 25px;">
    <%= f.label :class_name, "Class Name" %><br></div>
<div class="form-group">
  <label class="sr-only" for="exampleInputEmail2">ClassName</label>
  <%= f.text_field :class_name,:style=>"height: 28px; width:400px;margin-left:25px;" %>
</div>
<br/><br>
<div class="controls" style="margin-left: 25px;">
<%= f.label :semester, "Semester:" %><br></div>
<div class="form-group">
  <label class="sr-only" for="exampleInputEmail2">Semester</label>
 &nbsp; &nbsp; &nbsp; <%= f.select :semester_id,options_for_select([["select",""]]+Semester.all.map{|a| [a.name]}, :selcted => f.object.semester_id) %>
</div>
<br/><br>
<div class="controls" style="margin-left: 25px;">
<%= f.label :subject, "Subject" %><br></div>
<div class="controls">
  <%= f.fields_for :subjects, :html=>{:multipart => true} do |builder| %>
    <% if builder.object.assign != "Assigned" %>
      <label class="sr-only" for="exampleInputPassword2">Subject Name</label>
      <%= builder.autocomplete_field :subject_name,autocomplete_subject_subject_name_school_clses_path,:style=>"height: 28px; width:400px;margin-left:25px;" %>
    <% end %>
  <% end %>
      
  <div class="controls" style="margin-top: -28px;margin-left: 450px;">
    <% if params[:action] == "new"%>
    <%= link_to_add_fields image_tag("add.jpeg"), f,:subjects %>
  <%  end %>
  </div>
    
</div>
<div class="controls" style="margin-top: 30px;">
  <%= f.submit "Save",:class=>"btn btn-success",:style => "margin-left:25px;" %>
</div>

<style>
  .dropdown-menu .active > a, .dropdown-menu .active > a:hover {
    background-repeat: repeat-x;
    color: #ffffff;
    outline: 0 none;
    text-decoration: none;
  }
</style>




