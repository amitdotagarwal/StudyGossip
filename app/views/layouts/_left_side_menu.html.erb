      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="glyphicon glyphicon-align-justify"></span> </button>
    </div>
    <div class="navbar-collapse collapse">
      <div id="navigation">
        <ul class="main-navigation clearfix">
          <li class="icon-home <%= (params[:controller] == 'profiles' && params[:action] == 'index') ? 'active' : '' %>">
             <%= link_to 'Home', profiles_path(:school_name => current_user.school_admin.school)  %>
