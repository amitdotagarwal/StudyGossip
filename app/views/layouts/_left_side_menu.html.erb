                    <li>
                    <%= link_to "Readings", class_readings_path(:school_name =>current_user.school_admin.school,:class_id =>current_user.id), :remote => true, :onclick => 'graph_id(this)' %>
                    </li>
                    <li>
                    <%= link_to "Important Links", class_importent_links_path(:school_name =>current_user.school_admin.school,:class_id =>current_user.id), :remote => true, :onclick => 'graph_id(this)' %>
