                     <li><%= link_to "Posts", profile_path(:school_name => current_user.school_admin.school,:id =>current_user.id, :post => 'post'), :remote => true, :title => "Posts" %></li>
                    <li><%= link_to "Replies", profile_path(:school_name => current_user.school_admin.school,:id =>current_user.id, :post => 'reply'), :remote => true, :title => "Replies" %></li>  
