<% @user ||= current_user %>
<div id="left-column">
    <div class="box-porfile">
      <div class="frow">
        <div>
          <div class="thum-user1">
          <%= profile_picture %>
            </div>
        </div>
        <div class="outer-box-shivraj">
          <div class="box-shivraj">
            <h6><%= @user.fullname %></h6>
            <a href="#" title="View profile">View my profile page</a>
          </div>
        </div>
      </div>
      <ul class="list-post clearfix">
