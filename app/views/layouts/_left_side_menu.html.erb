            <%end%>
          </li>
          <li class="icon-class <%= (params[:controller] == 'classes' && (params[:action] == 'index' || params[:action] == 'show'|| params[:action] == 'roster' || params[:action] == 'invite_students' || params[:action] == 'faqs' || params[:action] == 'importent_links' || params[:action] == 'readings')) ? 'active' : '' %>">
