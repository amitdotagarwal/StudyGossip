
<div class="container">
  <div class="row">
    <div class="span10 sign_up_column">
      <div class="sign_up_content">
<h4> Change your Password </h4>
          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
          <%= devise_error_messages! %>
          <%= f.hidden_field :reset_password_token %>
          <div class="controls">
            <%= f.password_field :password,:style=>"width:400px; height: 50px;", :class => 'form-control', :placeholder => "New password" %>
          </div><br/>
          <div class="controls">
            <%= f.password_field :password_confirmation,:style=>"width:400px; height: 50px;", :class => 'form-control', :placeholder => "Confirm new password" %>
          </div><br/>
          <%= f.submit "Change Password", :class => "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<link rel="stylesheet" href="/assets/home/bootstrap.min.css">
