 <div class="container">
  <div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
    <div class="text-left">
  <%= form_for @school, :url => admin_schools_path do |f| %>

   <link rel="stylesheet" href="/assets/home/bootstrap.min.css"> 

  <h2>Send School Invitation</h2>
    <%= f.label :first_name %><br>
    <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-user"></span>
      <%= f.text_field :first_name, placeholder: "First Name", class: "form-control input-lg", label: false, autofocus: true,:style=>"height: 28px;" %>
      <%= validation_error(@school.errors["first_name"])%>
    </div><br>
    <%= f.label :last_name %><br>
    <div class="input-group">
     <span class="input-group-addon glyphicon glyphicon-user"></span>
      <%= f.text_field :last_name, :class=>"form-control", :placeholder=>"Last Name",:style=>"height: 28px;" %>
      <%= validation_error(@school.errors["last_name"])%>
    </div><br>
    <%= f.label :school_name %><br>
    <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-home"></span>
       <%= f.text_field :school_name, :class=>"form-control", :placeholder=>"School Name",:style=>"height: 28px;" %>
       <%= validation_error(@school.errors["school_name"])%>
    </div><br>
    <%= f.label :email %><br>
    <div class="input-group">
    <span class="input-group-addon glyphicon glyphicon-envelope"></span>
      <%= f.email_field :email, :class=>"form-control", :placeholder=>"Email",:style=>"height: 28px;" %>
      <%= validation_error(@school.errors["email"])%>
    </div><br>
         
    <button type="submit" class="btn btn-info">Send Invitation</button>
  
</div>
<% end %>
</div>
</div>
</div>

<style>
#error_explanation {
  color: #f00;
   border: 1px solid #CCC;
   margin-bottom: 20px;
   padding: 10px;
  ul {
    list-style: none;
    margin: 0 0 18px 0;
  }
}

.field_with_errors {
  padding: 1px;
  background-color: #f00;
  display: table;
}
</style>