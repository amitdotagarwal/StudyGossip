<%= render "layouts/left_side_menu" %>
<div id="right-column">
<% if @user.role == 'teacher' %>
  <h2><span class="icon-creation"></span>Classes with Subjects</h2>
  <div class="box-classname">
  <% if @subjects.present? %>
  <table class="table">
        <thead>
          <tr>
            <th>Class Name</th>
            <th>Subject Name</th>
          </tr>
        </thead>
         <% @subjects.each do |classsubjects| %>
         <tbody>
        <tr>
          <td><%= classsubjects.cls.class_name  %></td>
          <td><%= link_to classsubjects.subject.subject_name,class_path(:school_name => current_user.school_admin.school,:id =>classsubjects.cls.id,:subject_id=>classsubjects.subject.id) %></td>
        </tr>
        </tbody>
      <% end %>
    </table>
  <% else %>
  <span style="color: red;font-size: 15px;">No Classes.</span>
  <% end %>
  </div>
  <% else %>
<h2><span class="icon-creation"></span>Classes with Subjects</h2>
  <div class="box-classname">
  <table class="table">
        <thead>
          <tr>
            <th>Class Name</th>
            <th>Subject Name</th>
            <th>Actions</th>
          </tr>
        </thead>
         <% @student_subjects.each do |classsubjects| %>
      <% classsubjects.cls.subjects.each do |s| %>
        <tr>
          <td><%= classsubjects.cls.class_name  %></td>
          <td><%= s.subject_name %></td>
          <td><%= link_to "Show",student_subject_show_class_path(:school_name => current_user.school_admin.school,:id =>classsubjects.cls.id,:subject_id=>s.id) %> </td>
        </tr>
      <% end %>
    <% end %>
    </table>
  
  <% end %>
  </div>
  <% end %>
</div>

