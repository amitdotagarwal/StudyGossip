
 <link rel="stylesheet" href="/assets/home/bootstrap.min.css">
<% @parent.users.each do |s| %>
<div class="well well-lg"><center><h2><%= s.first_name.capitalize %> Mark's Report</h2></center></div>
<% end %>
  <table >

<tr>
<th>Student Id</th>
<th>Class Name</th>
<th>Subject Name</th>
<th>Pass Marks</th>
<th> Student Marks</th>
<th> Total Marks</th>
<th> Remarks</th>
</tr>

<% @marks.each do |m| %>
<tr>

<% @parent.users.each do |student| %>
<td><%= student.id %></td>
<%end %>
<%#= m.user_id %></td>
<td><%= m.cls.class_name %></td>
<td><%= m.subject.subject_name %></td>
<td><%= m.min_marks %></td>
<td><%= m.max_marks %></td>
<td><%= m.total_marks %></td>
<td><%= m.comment.capitalize %></td>

</tr>
<% end%>
</table>


<style>
table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    text-align: left;
    padding: 8px;
}

tr:nth-child(even){background-color: #f2f2f2}

th {
    background-color: #4CAF50;
    color: white;
}
</style>